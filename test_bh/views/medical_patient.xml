                            </group>
                        </page>

                        <page string="Indications / Contra Indi.">
                            <form>
                                <div class="o_setting_container">
                                    <div class="settings_tab"/>
                                    <div class="settings">
                                        <div class="app_settings_block" data-string="Patient" string="Patient's Name">
                                            <h2>Patient's Name</h2>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="patient_documents_form_view" model="ir.ui.view">
            <field name="name">Documents</field>
            <field name="model">medical.patient.documents</field>
            <field name="arch" type="xml">
                <form string="Documents">
                    <sheet>
                        <group>
                            <group>
                                <group>
                                    <field name="name"/>
                                </group>
                                <group>
                                </group>
                            </group>
                        </group>
                        <h1>
                            <field name="document" filename="name"/>
                        </h1>
                        <group>
                            <group>
                                <group>
                                    <field name="patient_id" readonly="1"/>
                                </group>
                                <group>
                                    <field name="created_date"/>
                                </group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="patient_documents_tree_view" model="ir.ui.view">
            <field name="name">Documents</field>
            <field name="model">medical.patient.documents</field>
            <field name="arch" type="xml">
                <tree string="Documents">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="created_date"/>
                </tree>
            </field>
        </record>

        <record id="patient_documents_action" model="ir.actions.act_window">
            <field name="name">Patient Documents</field>
            <field name="res_model">medical.patient.documents</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('patient_id', '=', active_id)]</field>
            <field name="context">{'default_patient_id': active_id}</field>
        </record>

    </data>
</odoo>
